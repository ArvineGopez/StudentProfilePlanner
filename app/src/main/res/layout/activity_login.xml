<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pbuskell.studentprofileplanner.Login"
    android:background="#f97e7e">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edttxtUsername"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="       Ⓤⓢⓔⓡⓝⓐⓜⓔ"
        android:id="@+id/txtViewUsername"
        android:textSize="30dp"
        android:layout_above="@+id/edttxtUsername"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="       Ⓟⓐⓢⓢⓦⓞⓡⓓ"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/txtViewUsername"
        android:layout_alignStart="@+id/txtViewUsername" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edtTxtPassword"
        android:layout_below="@+id/textView"
        android:layout_marginTop="27dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edttxtUsername"
        android:layout_alignEnd="@+id/edttxtUsername" />

    <Button
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:text="Login"
        android:id="@+id/button"
        android:layout_below="@+id/edtTxtPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="@drawable/pencil" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvwSuccessSignUp"
        android:textSize="18dp"
        android:text="YOU HAVE SUCCESSFULLY SIGNED UP!!!!"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />
</RelativeLayout>
