<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pbuskell.studentprofileplanner.SignUp"
    android:background="#7cf095"
    android:onClick="insertData">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ѕιgn υp"
        android:id="@+id/textView2"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtTxtUsername"
        android:layout_marginTop="37dp"
        android:hint="Username :"
        android:layout_below="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edtTxtPassword"
        android:hint="Password :"
        android:layout_below="@+id/edtTxtEmail"
        android:layout_alignLeft="@+id/edtTxtEmail"
        android:layout_alignStart="@+id/edtTxtEmail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edtTxtEmail"
        android:hint="Email :"
        android:layout_below="@+id/edtTxtUsername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="150dp"
        android:text="Sign Up"
        android:id="@+id/btnSignUpToLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:textSize="60dp"
        android:nestedScrollingEnabled="false"
        android:onClick="btnSignUpToLogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvwError"
        android:layout_marginTop="27dp"
        android:textSize="35dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/edtTxtPassword"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
